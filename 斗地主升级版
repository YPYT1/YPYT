    public static void main(String[] args) {
        //åˆ›å»ºHashMap,é”®æ˜¯ç¼–å·ï¼Œå€¼æ˜¯ç‰Œ
        HashMap<Integer, String> hm = new HashMap<Integer, String>();
        //åˆ›å»ºArrayList,å­˜å‚¨ç¼–å·
        ArrayList<Integer> array = new ArrayList<Integer>();

        //å®šä¹‰ç‰Œçš„ç±»åˆ«
        String[] colors = {"â™¦", "â™£", "â¤", "ğŸ‘"};
        //å®šä¹‰ç‰Œçš„ç‚¹æ•°
        String[] numbers = {"3", "4", "5", "6", "7", "8", "9", "10", "J", "Q", "k", "A", "2"};

        int index = 0;
        for (String number : numbers) {
            for (String color : colors) {
                hm.put(index, color + number);
                array.add(index);
                index++;
            }
        }
        hm.put(index, "å°ç‹");
        array.add(index);
        index++;
        hm.put(index, "å¤§ç‹");
        array.add(index);

        Collections.shuffle(array);
        TreeSet<Integer> wlt = new TreeSet<Integer>();
        TreeSet<Integer> xxl = new TreeSet<Integer>();
        TreeSet<Integer> zl = new TreeSet<Integer>();
        TreeSet<Integer> dp = new TreeSet<Integer>();

        for (int i = 0; i < array.size(); i++) {
            int x = array.get(i);
            if (i >= array.size() - 3) {
                dp.add(x);
            } else if (i % 3 == 0) {
                wlt.add(x);
            } else if (i % 3 == 1) {
                xxl.add(x);
            } else if (i % 3 == 2) {
                zl.add(x);
            }
        }

        lookpk("ç‹ä»¤æ¶›", wlt, hm);
        lookpk("è°¢ç»ªä¸½", xxl, hm);
        lookpk("å¼ å…°", zl, hm);
        lookpk("åº•ç‰Œ", dp, hm);
    }

    //å®šä¹‰æ–¹æ³•çœ‹ç‰Œ
    public static void lookpk(String name, TreeSet<Integer> ts, HashMap<Integer, String> hm) {
        System.out.print(name + "çš„ç‰Œæ˜¯");
        for (Integer key : ts) {
            String poker = hm.get(key);
            System.out.print(poker + " ");
        }
        System.out.println();
    }
